root = true

[*]
charset = utf-8
end_of_line = lf
tab_width = 2
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[{*.py,*.pyw,Dockerfile,Dockerfile.dev}]
tab_width = 4
indent_size = 4

[Makefile]
indent_style = tab

[*.csv]
insert_final_newline = false
